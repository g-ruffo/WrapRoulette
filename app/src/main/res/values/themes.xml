    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
    </style>

    <style name="Theme.WrapRoulette.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Theme.WrapRoulette.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WrapRoulette.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="LoginText">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/loginTextDarkBackgroundColor</item>
        <item name="textFillColor">@color/loginTextDarkBackgroundColor</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ValueText">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/valueTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PoolDetailCardText">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/blueLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/poolDetailCardTextSize</item>
