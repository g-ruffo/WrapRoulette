    <style name="NumberPickerTheme" parent="Theme.WrapRoulette">
        <item name="colorControlNormal">@color/backgroundOrange</item>
        <item name="android:textColorPrimary">@color/fabIconTint</item>
        <item name="android:textColor">@color/fabIconTint</item>
    </style>

    <!-- Alert Dialog -->
    <style name="NumberPickerDialog.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:background">@color/backgroundBlueLight</item>
    </style>


    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/darkOrange</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/darkOrange</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_material_button</item>
    </style>

    <style name="FabButton">
        <item name="maxImageSize">28dp</item>
        <item name="backgroundTint">@color/color_states_fab_button</item>
        <item name="tint">@color/color_states_fab_text</item>
        <item name="fabSize">normal</item>
        <item name="iconTint">@color/color_states_fab_text</item>
        <item name="android:textColor">@color/color_states_fab_text</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="sendFabButton">
        <item name="maxImageSize">28dp</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
        <item name="tint">@color/darkHeaderTextColor</item>
        <item name="fabSize">normal</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FabText">
        <item name="elevation">42dp</item>
        <item name="android:textColor">@color/color_states_fab_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainBlueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_corners_button_login</item>
        <item name="android:textColor">@color/fabIconTint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@animator/send_fab_state_animator</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
    </style>

    <style name="loginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_corners_button_login</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:stateListAnimator">@animator/send_fab_state_animator</item>
        <item name="android:backgroundTint">@color/color_states_material_button_login</item>
        <item name="backgroundTint">@color/color_states_material_button_login</item>
    </style>

    <style name="backButton">
        <item name="android:elevation">12dp</item>
        <item name="tint">@color/fabIconTint</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">@dimen/backButtonSize</item>
        <item name="android:layout_height">@dimen/backButtonSize</item>
        <item name="android:layout_margin">@dimen/backButtonLayoutMargin</item>
    </style>

    <style name="progressBar">
        <item name="android:elevation">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="indicatorColor">@color/highlightOrange</item>
        <item name="indicatorSize">60dp</item>
        <item name="trackThickness">10dp</item>
