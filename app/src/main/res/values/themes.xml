    <style name="AccountTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_states_pir_image</item>
        <item name="android:textColorHint">@color/color_states_pir_image</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
