<resources>
    <!-- Base application theme. -->
    <style name="Theme.WrapRoulette" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">@color/blueDark</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowActionBarOverlay">true</item>-->
        <!--        <item name="android:windowActionBarOverlay">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:fitsSystemWindows">true</item>-->

    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
    </style>

    <style name="Theme.WrapRoulette.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Theme.WrapRoulette.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WrapRoulette.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/login_edit_text_radius</item>
        <item name="boxBackgroundColor">@color/blueInputBoxColor</item>
        <item name="startIconTint">@color/white</item>
        <item name="android:textColorHint">@color/blueInputHintTextColor</item>
        <item name="counterTextColor">@color/blueInputHintTextColor</item>
        <item name="passwordToggleTint">@color/white</item>
        <item name="android:textColor">@color/blueInputHintTextColor</item>
        <item name="helperTextTextColor">@color/fabIconTint</item>
        <item name="colorAccent">@color/fabIconTint</item>
        <item name="colorControlNormal">@color/fabIconTint</item>
        <item name="colorControlActivated">@color/fabIconTint</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="colorPrimary">@color/fabIconTint</item>
        <item name="colorOnSurface">@color/fabIconTint</item>
        <item name="hintTextColor">@color/blueInputHintTextColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorPrimary">@color/fabIconTint</item>
        <item name="android:titleTextColor">@color/fabIconTint</item>
        <item name="editTextColor">@color/fabIconTint</item>
        <item name="textFillColor">@color/fabIconTint</item>
        <item name="android:editTextColor">@color/fabIconTint</item>
        <item name="android:textCursorDrawable">@color/fabIconTint</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="colorOnSecondary">@color/fabIconTint</item>
    </style>


    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fabIconTint</item>
        <item name="android:textColorHint">@color/fabIconTint</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AccountTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="startIconTint">@color/blueLight</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/login_edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/login_edit_text_radius</item>
        <item name="boxBackgroundColor">@color/blueGrey</item>
        <item name="android:textColorHint">@color/cardViewTitleColor</item>
        <item name="android:textColor">@color/blueInputHintTextColor</item>
        <item name="helperTextTextColor">@color/fabIconTint</item>
        <item name="colorAccent">@color/fabIconTint</item>
        <item name="colorControlNormal">@color/fabIconTint</item>
        <item name="colorControlActivated">@color/fabIconTint</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="colorPrimary">@color/fabIconTint</item>
        <item name="colorOnSurface">@color/fabIconTint</item>
        <item name="hintTextColor">@color/blueInputHintTextColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorPrimary">@color/fabIconTint</item>
        <item name="android:titleTextColor">@color/fabIconTint</item>
        <item name="editTextColor">@color/fabIconTint</item>
        <item name="textFillColor">@color/fabIconTint</item>
        <item name="android:editTextColor">@color/cardViewTitleColor</item>
        <item name="android:textCursorDrawable">@color/fabIconTint</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="colorOnSecondary">@color/fabIconTint</item>
    </style>

    <style name="AccountTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardViewTitleColor</item>
        <item name="android:textColorHint">@color/blueLight</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_material_button</item>
    </style>

    <style name="FabButton">
        <item name="maxImageSize">28dp</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
        <item name="tint">@color/fabIconTint</item>
        <item name="fabSize">normal</item>
        <item name="iconTint">@color/fabIconTint</item>
        <item name="android:textColor">@color/fabIconTint</item>
    </style>

    <style name="FabText">
        <item name="elevation">42dp</item>
        <item name="android:textColor">@color/fabTextColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainBlueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_corners_button_login</item>
        <item name="android:textColor">@color/fabIconTint</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/color_states_material_button</item>
    </style>

    <style name="loginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_corners_button_login</item>
        <item name="android:textColor">@color/bluePrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_states_material_button_login</item>
        <item name="backgroundTint">@color/color_states_material_button_login</item>
    </style>

    <style name="backButton">
        <item name="android:elevation">12dp</item>
        <item name="tint">@color/fabIconTint</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">@dimen/backButtonSize</item>
        <item name="android:layout_height">@dimen/backButtonSize</item>
        <item name="android:layout_margin">@dimen/backButtonLayoutMargin</item>
    </style>


</resources>